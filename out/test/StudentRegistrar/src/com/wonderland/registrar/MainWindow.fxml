<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane  alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1" fx:controller="com.wonderland.registrar.Controller">
    <Label text="FirstName: " />
    <TextField fx:id="newStudentFirstNameField" GridPane.columnIndex="1" />

    <Label text="LastName: " GridPane.rowIndex="1" />
    <TextField fx:id="newStudentLastNameTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <Label text="Email: " GridPane.rowIndex="2" />
    <TextField fx:id="newStudentEmailTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <Label text="Student_ID: " GridPane.rowIndex="3" />
    <TextField fx:id="newStudentIdTextField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <Button text="Submit" GridPane.columnIndex="1" GridPane.rowIndex="4"
            GridPane.halignment="CENTER" onAction="#onSubmit" fx:id="submitButton"/>

</GridPane>
